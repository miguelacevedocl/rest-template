{
  "name": "api-code-name",
  "version": "1.0.0",
  "description": "zenta-app",
  "main": "index.js",
  "scripts": {
    "start": "node --max-old-space-size=6000 dist/index.js",
    "compile": "ts-node build.ts && tsc",
    "dev": "nodemon server/index.ts | pino-pretty",
    "dev:debug": "nodemon --exec 'node -r ts-node/register --inspect-brk' server/index.ts | pino-pretty",
    "lint": "tsc --noEmit && eslint -c .eslintrc.js '{server, test}/*.{js,ts,tsx}' --quiet",
    "lint:fix": "tsc --noEmit && eslint -c .eslintrc.js '{server, test}/*.{js,ts,tsx}' --quiet --fix",
    "test": "mocha",
    "test-single": "mocha --exit --grep",
    "test:debug": "mocha --inspect-brk test/**/*.ts --exit",
    "test:coverage": "nyc --reporter=lcov  mocha --reporter mocha-sonarqube-reporter test --reporter-options output=sonarqube.xml"
  },
  "dependencies": {
    "@types/node": "^13.1.2",
    "async": "^3.2.0",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-actuator": "^1.4.0",
    "morgan": "^1.10.0",
    "http-status": "^1.4.2",
    "pino": "^5.13.6",
    "node-fetch": "^2.6.1",
    "request": "^2.88.0",
    "sinon": "^9.2.1",
    "request-promise": "^4.2.5",
    "swagger-express-middleware": "^2.0.4"
  },
  "devDependencies": {
    "@types/chai": "^4.2.4",
    "@types/express": "^4.17.2",
    "@types/express-actuator": "^1.3.0",
    "@types/mocha": "^5.2.7",
    "@types/pino": "^5.8.13",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "chai": "^4.2.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.6.0",
    "eslint-plugin-prettier": "^3.1.1",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.4",
    "pino-pretty": "^3.3.0",
    "prettier": "^1.19.1",
    "shelljs": "^0.8.3",
    "supertest": "^4.0.2",
    "ts-lint": "^4.5.1",
    "ts-node": "^9.1.1",
    "tslint": "^5.20.1",
    "typescript": "^4.1.4"
  },
  "author": "Miguel Acevedo <miguel.acevedo@zentagroup.com> ()"
}
